---
import BundleList from "./bundleList.tsx";
import { getPricesAndBundles } from "@/components/priceNbundles/sheetdb";
import { Link } from "@/components/ui/link";

const prices = await getPricesAndBundles();
const defaultPrice = prices[0];
---

<h1 class="text-center text-5xl md:text-7xl font-bold mb-16 tracking-wider">
    PRICES AND BUNDLES
</h1>

<BundleList defaultCurrentPrice={defaultPrice} client:load />

<div
    class="mb-16 bg-gradient-to-r from-gray-900 to-black border border-gray-800 rounded-lg p-8 text-center"
>
    <h2 class="text-3xl font-bold mb-4">
        Need a Quote for a Full-Length Project?
    </h2>
    <p class="text-lg text-gray-300 mb-6 max-w-2xl mx-auto">
        Working on an EP, album, or a special project that requires custom
        attention? Get in touch for a personalized quote tailored to your
        specific needs.
    </p>
    <Link
        href="/prices-and-bundles#contact"
        className="inline-flex items-center py-4 text-lg font-semibold rounded transition-all transform hover:scale-105"
    >
        Request a Custom Quote
        <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5 ml-2"
            viewBox="0 0 20 20"
            fill="currentColor"
        >
            <path
                fill-rule="evenodd"
                d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z"
                clip-rule="evenodd"></path>
        </svg>
    </Link>
</div>
