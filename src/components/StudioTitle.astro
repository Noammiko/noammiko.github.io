---
import Title from "@/assets/title.svg";
import { cn } from "@/lib/utils";

const sizeClasses = {
  sm: "w-24 md:w-32",
  md: "w-40 md:w-48",
  lg: "w-60 md:w-72",
  auto: "w-auto"
} as const;

interface Props {
  size?: keyof typeof sizeClasses;
  class?: string;
  fill?: string;
}

const { class: className, size = "md", fill = "#fffce0" } = Astro.props;

const classes = cn(sizeClasses[size], className);
---

<Title class={classes} fill={fill} />
