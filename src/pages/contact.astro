---
import Page from "@/layouts/Page.astro";
import { Mail, Phone } from "lucide-react";
---

<Page title="Contact" description="Contact Us" currentPage="contact">
  <div>
    <h1 class="text-center text-5xl md:text-7xl font-bold mb-16 tracking-wider">
      CONTACT US
    </h1>

    <div class="max-w-4xl mx-auto mb-16">
      <div class="space-y-8" id="contact">
        <div class="bg-black/30 backdrop-blur-sm p-6 rounded-lg border border-red-500/30 hover:border-red-500/50 transition">
          <h2 class="text-3xl font-bold mb-6 border-b border-red-500/50 pb-2">      
            Contact Information
          </h2>
          <div class="grid md:grid-cols-2 gap-6">
            <div class="flex items-center gap-3">
              <Mail className="w-6 h-6 text-red-400" />
              <a
                href="mailto:noamtoven@gmail.com"
                class="text-xl hover:text-red-300 transition"
              >
                noamtoven@gmail.com
              </a>
            </div>
            <div class="flex items-center gap-3">
              <Phone className="w-6 h-6 text-red-400" />
              <a
                href="tel:+12266062452"
                class="text-xl hover:text-red-300 transition"
              >
                (226) 606-2452
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Page>