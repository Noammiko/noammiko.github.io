---
import Page from "@/layouts/Page.astro";

import { Link } from "@/components/ui/link.tsx";

import * as faqs from "./_faq.md";

const content = await faqs.compiledContent();
// split content on h1 headings, get the content, the id and heading into ab object in an array
// using the regex /<h1 id="([\w-]+)">([^<]+)<\/h1> (.+?)(?: (?=<h)|$)/gm
const re = /<h1 id="([\w-]+)">([^<]+)<\/h1> (.+?)(?: (?=<h1)|$)/gm;
const faqList = [...content.replaceAll(">\n", "> ").matchAll(re)].map((m) => ({
  id: m[1],
  question: m[2],
  answer: m[3],
}));
---

<Page title="FAQ" description="Frequently Asked Questions" currentPage="faq">
  {/* FAQ Content */}
  <div class="container mx-auto px-4 py-12 relative z-10">
    <h1
      class="text-center glitch-text text-5xl md:text-7xl font-bold mb-16 tracking-wider"
    >
      FREQUENTLY ASKED QUESTIONS
    </h1>

    <div class="max-w-4xl mx-auto">
      <div class="space-y-8" id="faq">
        {
          faqList.map((faq) => (
            <div
              id={faq.id}
              class="bg-black/30 backdrop-blur-sm p-6 rounded-lg border border-red-500/30 hover:border-red-500/50 transition"
            >
              <h2 class="text-2xl font-bold mb-4 text-red-300">
                {faq.question}
              </h2>
              <div class="text-lg text-gray-200" set:html={faq.answer}></div>
            </div>
          ))
        }
      </div>

      <div class="mt-16 text-center">
        <p class="text-xl mb-6">Have a question that's not answered here?</p>
        <div class="flex flex-col sm:flex-row justify-center gap-4">
          <Link
            href="/contact"
            className="bg-red-600 hover:bg-red-700 text-white px-8 py-6 text-lg"
          >
            Contact Us
          </Link>
          <Link
            href="/prices-and-bundles#book-session"
            className="bg-red-600 hover:bg-red-700 text-white px-8 py-6 text-lg"
          >
            Book a Session
          </Link>
        </div>
      </div>
    </div>
  </div>
</Page>

<style is:global lang="scss">
  div#faq {
    ul {
      margin-top: 0.5rem /* 8px */;
      padding-left: 1.5rem /* 24px */;
      list-style-type: disc;
    }
    p {
      margin-top: 0.5rem /* 8px */;
    }
    a {
      text-decoration-line: underline;
      color: #fca5a5;
      &:hover {
        color: #f87171;
      }
    }
    strong {
      font-weight: bold;
      color: #fca5a5;
    }
  }
</style>
