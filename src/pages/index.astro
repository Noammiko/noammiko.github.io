---
import Layout from "@/layouts/Layout.astro";

import UserLinks from "@/components/userLinks.svelte";
import RecordingStudioButtons from "@/components/RecordingStudioButtons.astro";
import SongLink from "@/components/OdesliEmbed.astro";

import { getImages } from "@/assets/galary/images";
import Gallery from "@/components/Gallery.tsx";

const images = await getImages({
  densities: [1.5, 2],
  imageTransform: {
    format: "webp",
  },
});

const songId = "1771197405";
---

<Layout title="Noam Miko" description="Guelph audio recording and editing studio">
  <main
    class="flex h-full min-h-screen justify-center bg-gradient-to-tl bg-repeat bg-scroll overflow-y-auto scrollbar-hide scrollbar-custom from-black from-20% via-40% to-80% to-black via-red-950"
  >
    <div class="w-full h-full xl:w-5/6 md:mx-4 xl:mx-0 xl:max-w-[1500px] text-center text-white">
      <h1 class="pointer-events-none text-6xl m-4">Noam Miko</h1>

      <div class="max-w-80 mx-auto">
        <UserLinks
          client:idle="svelte"
          links={[
            {
              href: "https://www.tiktok.com/@noam.mikomusic?_t=ZM-8u3YhR5AXLC&_r=1",
              type: "tiktok",
            },
            { 
              type: "youtube",
              href: "https://www.youtube.com/@NoamMiko"
             },
            {
              href: "https://open.spotify.com/artist/0gUcy53MSITsECduF7jt2l?si=y6q6aBEaSkabScRdjv4Twg",
              type: "spotify",
            },
            {
              href: "https://music.apple.com/ca/artist/noam-miko/1770122422",
              type: "apple",
            },
            {
              href: "https://www.instagram.com/noam.mikomusic/",
              type: "instagram",
            },
            {
              href: "https://maps.app.goo.gl/qZG9dowqgBdJa95L6",
              type: "location",
            },
          ]}
        />
      </div>

      <div
        class="flex flex-col md:gap-2 md:flex-row place-content-between md:items-baseline mt-1 md:mt-8"
      >
        <div class="mb-4">
          <h2 class="pointer-events-none text-4xl mt-4">
            Miko recording studio
          </h2>

          <RecordingStudioButtons />
        </div>

        <div class="hidden ll:block self-center">
          <h2 class="pointer-events-none text-4xl mt-4">
            Gallery
          </h2>

        <Gallery images={images} client:load />
        </div>

        <div>
          <h2 class="text-4xl mt-8">My Music</h2>
          <div class="h-24 m-2 md:min-w-80 md:h-64">
            <div class="hidden md:block">
              <SongLink id={songId} size="large" dark={true} />
            </div>

            <div class="block md:hidden">
              <SongLink id={songId} size="medium" dark={true} />
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  /* Custom scrollbar for Chrome, Safari, and Opera */
  .scrollbar-custom::-webkit-scrollbar {
    width: 12px; /* Width of the scrollbar */
  }

  .scrollbar-custom::-webkit-scrollbar-track {
    background: #f1f1f1; /* Background of the scrollbar track */
  }

  .scrollbar-custom::-webkit-scrollbar-thumb {
    background: #888; /* Color of the scrollbar thumb */
    border-radius: 10px; /* Rounded corners for the thumb */
  }

  .scrollbar-custom::-webkit-scrollbar-thumb:hover {
    background: #555; /* Color of the thumb on hover */
  }

  /* Custom scrollbar for Firefox */
  .scrollbar-custom {
    scrollbar-width: thin; /* Make the scrollbar thin */
    scrollbar-color: #888 #f1f1f1; /* Thumb color and track color */
  }
</style>
